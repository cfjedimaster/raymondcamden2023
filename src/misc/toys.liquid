<style>
img {
  max-width: 100%;
  display: block;
}

figure {
  margin: 0;
  display: grid;
  grid-template-rows: 1fr auto;
  margin-bottom: 10px;
  break-inside: avoid;
}

figure > img {
  grid-row: 1 / -1;
  grid-column: 1;
}

figure a {
  color: black;
  text-decoration: none;
}

.container {
  column-count: 2;
  column-gap: 10px;
}
</style>

{% comment %}
<div class="container">
{% for toy in toys %}
	<figure>
		<img src="{{toy}}">
	</figure>
{% endfor %}
</div>
{% endcomment %}
<div class='container'></div>

<script>
document.addEventListener('DOMContentLoaded', init, false);
async function init() {
  let div = document.querySelector('.container');
  div.innerHTML = '<i>Loading awesome photos...</i>';
  let req = await fetch('https://eof4egroho59c53.m.pipedream.net');
  let data = await req.json();
  let s = '';
  data.photos.forEach(p => {
    s += `<figure><img src="${p}"></figure>`;
  });
  div.innerHTML = s;
  //console.log(data);
}
</script>