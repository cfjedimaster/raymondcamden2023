---
pagination:
    data: collections.categories
    size: 1
    alias: cat
permalink: "categories/{{ cat | myEscape }}/"
layout: page
eleventyComputed:
    title: "{{ cat | titlecase }} ({{ collections.posts | getByCategory: cat | size }} Posts)"
---

{% assign posts = collections.posts | getByCategory: cat %}


<ul class="archive-posts-list">
    {% for post in posts %}
    <li><a href="{{ site.baseurl }}{{ post.url }}" rel="bookmark" title="Permanent
        Link to {{ site.baseurl }}{{ post.url }}">{{ post.data.title | escape }}</a> <span class="archive-meta"> â€” <time class="published" datetime="{{ post.date | date: "%Y-%m-%d" }}">{{ post.date | date: "%B %e, %Y" }}</time></span></li>
    {% endfor %}
</ul>
